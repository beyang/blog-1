<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text">marijn.haverbeke.nl/blog</title>
  <author>
    <name>Marijn Haverbeke</name>
    <uri>http://marijn.haverbeke.nl/</uri>
  </author>
  <updated><?t dateFormat(new Date, "yyyy-mm-dd'T'HH:MM:ssZ")?></updated>
  <id>http://marijn.haverbeke.nl/blog/feed.atom</id>

  <link rel="self" type="application/atom+xml"
        href="http://marijn.haverbeke.nl/blog/feed.atom"/>

  <?for post site.posts.slice(0, 40)?>
    <entry>
      <title><?t post.title?></title>
      <link rel="alternate" type="text/html"
            href="http://marijnhaverbeke.nl/blog/[?t post.url?]"/>
      <id>http://marijn.haverbeke.nl/blog/<?t post.url?></id>
      <updated><?t dateFormat(post.date, "yyyy-mm-dd'T'HH:MM:ssZ")?></updated>
      <?for tag post.tags?><category term="[?t tag?]"/><?for.?>
      <content type="xhtml" xml:lang="en">
        <div xmlns="http://www.w3.org/1999/xhtml"><?h post.content?></div>
      </content>
    </entry>
  <?for.?>
</feed>
